article
    #progress
        canvas(width="40px" height="40px")
        zen-icon(type="tick" color="white")

    != data.body

    if (data.prevPage || data.nextPage)
        div.page-links
            if (data.prevPage)
                a.card.hover.page-prev(href=data.prevPage.path)
                    h4
                        zen-icon(type="arrow-long-left" color="active" class="margin-r-tiny" size="medium")
                        span.align-middle previous article
                    span.display-b.ellipsis= data.prevPage.title

            if (data.nextPage)
                a.card.hover.page-next.text-right(href=data.nextPage.path)
                    h4
                        span.align-middle next article
                        zen-icon(type="arrow-long-right" color="active" class="margin-l-tiny" size="medium")
                    span.display-b.ellipsis= data.nextPage.title

    a(href="https://github.com/origami-cms/plugin-markdown-docs" target="_blank").made-by
        img(src="/docs/logo.svg" alt="Origami")
        | Generated by #[ Origami Markdown Docs plugin]
